<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<RepositoryUrl>https://github.com/XiHanFun/XiHan-Backend</RepositoryUrl>
		<AssemblyVersion>0.4.2</AssemblyVersion>
		<FileVersion>0.4.2</FileVersion>
		<Title>XiHan.Infrastructure.Core</Title>
		<Version>0.4.2</Version>
		<Authors>ZhaiFanhua</Authors>
		<Copyright>Copyright © ZhaiFanhua All Rights Reserved.</Copyright>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>曦寒基础设施核心组件库</Description>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>readme.png</PackageIcon>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<SignAssembly>False</SignAssembly>
		<OutputType>Library</OutputType>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="MiniExcel" Version="1.31.3" />
		<PackageReference Include="IP2Region.Net" Version="2.0.2" />
		<PackageReference Include="UAParser" Version="3.1.47" />
		<PackageReference Include="Microsoft.Extensions.Http.Polly" Version="8.0.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\XiHan.Common.Shared\XiHan.Common.Shared.csproj" />
		<ProjectReference Include="..\XiHan.Common.Utilities\XiHan.Common.Utilities.csproj" />
		<ProjectReference Include="..\XiHan.Domain.Core\XiHan.Domain.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="IpDatabases\ip2region.xdb">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="readme.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="readme.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>

