<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<RepositoryUrl>https://github.com/XiHanFun/XiHan-Backend</RepositoryUrl>
		<AssemblyVersion>0.4.2</AssemblyVersion>
		<FileVersion>0.4.2</FileVersion>
		<Title>XiHan.Application.Core</Title>
		<Version>0.4.2</Version>
		<Authors>ZhaiFanhua</Authors>
		<Copyright>Copyright © ZhaiFanhua All Rights Reserved.</Copyright>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>XiHan.Application.Core</Description>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>readme.png</PackageIcon>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<SignAssembly>False</SignAssembly>
		<OutputType>Library</OutputType>
	</PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\XiHan.Common.Shared\XiHan.Common.Shared.csproj" />
    <ProjectReference Include="..\XiHan.Common.Utilities\XiHan.Common.Utilities.csproj" />
    <ProjectReference Include="..\XiHan.Domain.Core\XiHan.Domain.Core.csproj" />
    <ProjectReference Include="..\XiHan.Infrastructure.Core\XiHan.Infrastructure.Core.csproj" />
    <ProjectReference Include="..\XiHan.Infrastructure.EventBus\XiHan.Infrastructure.EventBus.csproj" />
    <ProjectReference Include="..\XiHan.Infrastructure.Persistence\XiHan.Infrastructure.Persistence.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Update="readme.md">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Update="readme.png">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

</Project>
