<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<RepositoryUrl>https://github.com/XiHanFun/XiHan-Backend</RepositoryUrl>
		<AssemblyVersion>0.4.2</AssemblyVersion>
		<FileVersion>0.4.2</FileVersion>
		<Title>XiHan.Domain.Core</Title>
		<Version>0.4.2</Version>
		<Authors>ZhaiFanhua</Authors>
		<Copyright>Copyright © ZhaiFanhua All Rights Reserved.</Copyright>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>曦寒领域核心组件库</Description>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>readme.png</PackageIcon>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<SignAssembly>False</SignAssembly>
		<OutputType>Library</OutputType>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="MediatR" Version="12.2.0" />
	  <PackageReference Include="SqlSugarCore" Version="5.1.4.148" />
	</ItemGroup>

	<ItemGroup>
		<None Update="LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="readme.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="readme.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Events\Handlers\" />
	  <Folder Include="Exceptions\Domain\" />
	  <Folder Include="Exceptions\Infrastructure\" />
	  <Folder Include="Enums\" />
	  <Folder Include="Specifications\Criteria\" />
	  <Folder Include="Specifications\Constraints\" />
	  <Folder Include="Modules\" />
	</ItemGroup>
</Project>
