<Project Sdk="Microsoft.NET.Sdk.Web">

	  <PropertyGroup>
		  <TargetFramework>net8.0</TargetFramework>
		  <Nullable>enable</Nullable>
		  <ImplicitUsings>enable</ImplicitUsings>
		  <GenerateDocumentationFile>True</GenerateDocumentationFile>
		  <UserSecretsId>cf9c7a04-c34c-467d-85aa-6e694586601e</UserSecretsId>
		  <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
		  <DockerComposeProjectPath>..\docker-compose.dcproj</DockerComposeProjectPath>
		  <RepositoryUrl>https://github.com/XiHanFun/XiHan-Backend</RepositoryUrl>
		  <AssemblyVersion>0.4.2</AssemblyVersion>
		  <FileVersion>0.4.2</FileVersion>
		  <Title>XiHan.Presentation.Web.Host</Title>
		  <Version>0.4.2</Version>
		  <Authors>ZhaiFanhua</Authors>
		  <Copyright>Copyright Â© ZhaiFanhua All Rights Reserved.</Copyright>
		  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		  <Description>XiHan.Presentation.Web.Host</Description>
		  <IsPackable>true</IsPackable>
		  <OutputType>Exe</OutputType>
		  <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		  <PackageIcon>readme.png</PackageIcon>
		  <PackageReadmeFile>readme.md</PackageReadmeFile>
		  <PackageLicenseFile>LICENSE</PackageLicenseFile>
	  </PropertyGroup>

	  <ItemGroup>
	    <None Include="Properties\PublishProfiles\Linux.pubxml.user" />
	  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\XiHan.Common.Shared\XiHan.Common.Shared.csproj" />
    <ProjectReference Include="..\XiHan.Common.Utilities\XiHan.Common.Utilities.csproj" />
    <ProjectReference Include="..\XiHan.Presentation.Web.Core\XiHan.Presentation.Web.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Update="readme.md">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Update="readme.png">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

</Project>
